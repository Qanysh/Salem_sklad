<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Cooking Recipes</title>
    <%- include('components/imports.ejs') %>
</head>
<body>
    <%- include('components/header.ejs') %>

    <div class="container my-5">
        <div class="row align-items-center px-5">
            <div class="col-md-6">
                <!-- Login Form -->
                <form method="POST" action="/signup">
                    <div class="fs-3 fw-semibold mb-3">Sign Up an Account</div>
                    <% if (success) { %>
                        <span class="badge text-bg-success mb-3 fs-5"><a href="/login">Log in now!</a></span>
                    <% } else if (error) { %>
                        <span class="badge text-bg-danger mb-3 fs-5"></span>
                    <% } %>
                    <div class="row">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" name="username" placeholder="Enter username...">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Enter password...">
                        </div>
                        <div class="mb-3">
                            <label for="re_password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="re_password" placeholder="Repeat password...">
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Sign Up</button>
                        </div>
                        <% if (success) { %>
                            <div class="mb-3">
                                Already registered? <a href="/login" class="link-primary text-decoration-none">Log in now!</a>
                            </div>
                        <% } %>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('components/footer.ejs') %>
    
</body>
</html>