<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Salem sklad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>

    <div class="container">
        <div class="fs-2 fw-semibold mb-4">Admin Panel</div>
    </div>

    <div class="container mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Actions</th>
                    <th scope="col">Note</th>
                </tr>
            </thead>
            <tbody>
                <% allUsers.forEach(function(us) { %>
                    <tr>
                        <td>
                            <%= us.username %>
                        </td>
                        <td>
                            <%= us.created_at.toLocaleString() %>
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal"
                                data-bs-target="#editUserModal<%= us.id %>">
                                Edit
                            </button>

                            <div class="modal fade" id="editUserModal<%= us.id %>" tabindex="-1" role="dialog"
                                aria-labelledby="editUserModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editUserModalLabel">Edit Username</h5>

                                        </div>
                                        <div class="modal-body">
                                            <form method="POST" action="/admin/users/edit">
                                                <div class="form-group">
                                                    <input hidden name="userId" value="<%= us.id %>">
                                                    <label for="username">Username</label>
                                                    <input type="text" class="form-control" name="us_username"
                                                        value="<%= us.username %>">
                                                </div>
                                                <br>
                                                <button type="submit" class="btn btn-primary">Save changes</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteUser('<%= us.id %>')">
                                Delete
                            </button>
                        </td>
                        <td>
                            <% if (us.admin) { %>
                                <span class="badge bg-success">Admin</span>
                                <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <footer class="bg-secondary text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-3 d-none d-sm-block">
                    <div class="contact-info">
                        <div class="phone">Телефон: +7 (XXX) XXX-XX-XX</div>
                        <div class="address">Адрес: Город, Улица, Дом</div>
                        <div class="email">Email: info@example.com</div>
                        <div class="whatsapp">WhatsApp: +7 (XXX) XXX-XX-XX</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- Дополнительная информация или ссылки -->
                </div>
                <div class="col-md-4">
                    <div class="instagram"><a href="https://www.instagram.com/salem_sklad/">Instagram</a></div>
                </div>
            </div>
        </div>
    </footer>
</body>

</html>